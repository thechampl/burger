<h1>MAKE A BURGER</h1>

<ul>
  {{#each burger}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}} 

      </p>
    </li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="addburger" class="button-size">
	<textarea type="text" name="burger"></textarea>
	<button type="submit">Add this Burger!</button>
</form>



